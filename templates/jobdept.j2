{% include "index.html" %}
<body>
<main>
<!-- home page Jobs_has_Departments-->
   <div class="table-div">
    <table>
    <caption>Department Jobs Data
    </caption>
    {% if jobdept_data %}
        <thead>
            <tr>
                <th>Department Job ID</th>
                <th>Job Title</th>
                <th>Department Name</th>
                <th></th>
                <th></th>
            </tr>
        <tbody>
            {% for data in jobdept_data %}
            <tr>
                {% for i in data %}
                <td> {{i}} </td>
                {% endfor %}
                
                <td><a class="update-delete-btn" href="edit_jobdept/{{data[0]}}">Update</a></td>
                <td><a class="update-delete-btn" href="delete_job_dept/{{data[0]}}">Delete</a></td>

            </tr>
            {% endfor %}
        {% endif %}
    </table>
    <a class="add-btn" href='add_job_dept'>Add New Job to Department</a>
</div>
</main>
</body>
</html>