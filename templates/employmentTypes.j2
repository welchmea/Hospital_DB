<body>
<!-- home page EmploymentTypes-->
    <h2>Employment Types</h2>
    <table>
    <caption><strong>Current Employment Type Data</strong></caption>
    {% if employmentTypes_data %}
        <thead>
            <tr>
               <th>Employment Status</th>
               <th>Hours Allowed to Work</th>
                <th></th>
            </tr>
        <tbody>
            {% for data in employmentTypes_data %}
            <tr>
                {% for i in data %}
                <td> {{i}} </td>
                {% endfor %}

                <td><a href="delete_employmentTypes/{{data[0]}}">Delete</a></td>

            </tr>
            {% endfor %}
        {% endif %}
    </table>
    <button><a href='add_employmentTypes'>Add New Employment Type</a></button>
</body>
</html>