<!-- home page Departments_has_EmploymentTypes-->
    <h2>Department Employment Types</h2>
    <table>
    <caption><strong>Current Department Employment Type Data</strong></caption>
    {% if dep_empTypes_data %}
        <thead>
            <tr>
                <th>Department Employment Status ID</th>
                <th>Employment Status</th>
                <th>Department Name</th>
                <th>Delete</th>
            </tr>
        <tbody>
            {% for data in dep_empTypes_data %}
            <tr>
                {% for i in data %}
                <td> {{i}} </td>
                {% endfor %}

                <td><a href="delete_dep_empTypes/{{data[0]}}">Delete</a></td>
            </tr>
            {% endfor %}
        {% endif %}
    </table>
    <button><a href='add_dep_empTypes'>Add Employment Type to Department</a></strong></button>
