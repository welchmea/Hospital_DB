{% include "index.html" %}
<body>
<main>

<!-- home page Schedules-->
   <div class="table-div">
    <table>
    <caption><strong>Current Schedules Data</strong></caption>
    {% if schedules_data %}
        <thead>
            <tr>
                <th>Schedule ID</th>
                <th>Type</th>
                <th>Shift</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Employee Name</th>
                <th>Employment Status</th>
                <th>Department Name</th>
                <th></th>
            </tr>
        <tbody>
            {% for data in schedules_data %}
            <tr>
                {% for i in data %}
                <td> {{i}} </td>
                {% endfor %}

                <td><a class="update-delete-btn" href="delete_schedules/{{data[0]}}">Delete</a></td>

            </tr>
            {% endfor %}
        {% endif %}
    </table>
    <a class="add-btn" href='add_schedule'>Add New Schedule</a>
</div>
</main>
</body>
</html>