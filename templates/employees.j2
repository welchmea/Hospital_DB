{% include "index.html" %}

<body>
<main>
<!-- home page Employees-->
 <div class="table-div">
    <table>
    <caption><strong>Current Employee Data</strong></caption>
    {% if employees_data %}
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Employment Status</th>
                <th>Job Title</th>
                <th>Department Name</th>
                <th></th>
                <th></th>
            </tr>
        <tbody>
            {% for data in employees_data %}
            <tr>
                {% for i in data %}
                <td> {{i}} </td>
                {% endfor %}

                <td><a class="update-delete-btn" href='edit_employee/{{data[0]}}'>Update</a></td>
                <td><a class="update-delete-btn" href="delete_employees/{{data[0]}}">Delete</a></td>

            </tr>
            {% endfor %}
        {% endif %}
    </table>
    <a class="add-btn" href='add_employee'>Add New Employee</a>
</div>
</main>
</body>
</html>